@model Tuple<Restaurante.Models.OrdenDetalle, IEnumerable<Restaurante.Models.Producto>>

@{
    ViewData["Title"] = "Index1";
}
<h4>OrdenDetalle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Item1.IdOrden" class="control-label"></label>
                <select asp-for="Item1.IdOrden" class="form-control" asp-items="ViewBag.IdOrdenNavigation"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link" asp-controller="Producto" asp-action="Index">Platos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" asp-controller="Producto" asp-action="Postres">Postres</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Producto" asp-action="Bebidas">Bebidas</a>
        </li>
    </ul>

    <h3>Postres</h3>
    <table class="table">
        <thead title="Postres">
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Descripción
                </th>
                <th>
                    Precio $
                </th>
                <th>
                    Cantidad
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Item2)
            {
                if (item.Tipo == "Postres")
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Precio)
                        </td>
                        <td>
                            <div class="form-group">
                                <input asp-for="Item1.Cantidad" class="form-control" />
                                <span asp-validation-for="Item1.Cantidad" class="text-danger"></span>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Index">Volver</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
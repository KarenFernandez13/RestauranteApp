@model Restaurante.Models.Orden

@{
    ViewData["Title"] = "Delete";
}
@if (User.Identity!.IsAuthenticated) // sirve para bloquear ver los elementos si no estas registrado
{
<style>
    body {
        font-family: 'Playfair Display', serif;
        font-style: italic;
        font-size: 18px;
    }

    .centered-text {
        text-align: center;
        font-weight: bold;
        color: #333;
    }

    .bold-text {
        font-weight: bold;
    }

    .btn-delete {
        background-color: lightslategrey;
        color: black;
        border: 1px solid #b85f33;
        padding: 10px 20px;
        text-decoration: none;
        font-family: 'Playfair Display', serif;
        font-style: italic;
        font-weight: bold;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-delete:hover {
            background-color: rgba(0, 0, 0, 0.1);
            color: #333;
            border-color: #b85f33;
        }
</style>
<br />
<h3 class="bold-text"> ~ Eliminar orden ~ </h3>
<hr />
<br />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Número Orden:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            Numero Reserva:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdReservaNavigation.Id)
        </dd>
        <dt class="col-sm-2">
            Cliente:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.IdReservaNavigation.CiCliente)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>    
    </dl>
    <br />
    <h5>Advertencia: Esta acción no se puede deshacer</h5>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn-delete" />
    </form>
</div>
<br />
<div>
    <a class="custom-btn" href="@Url.Action("Index", "Orden")">Volver</a>
</div>
}
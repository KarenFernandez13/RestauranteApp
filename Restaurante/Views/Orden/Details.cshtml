@model Orden

@{
    ViewData["Title"] = "Details";
}
<style>
    body {
        font-family: 'Playfair Display', serif;
        font-style: italic;
    }

    .centered-text {
        text-align: center;
        font-weight: bold;
        color: #333;
    }

    .bold-text {
        font-weight: bold;
    }
</style>
<br />
<h3 class="bold-text">Info Orden</h3>
<br />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Fecha
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdReservaNavigation.Fecha)
        </dd>
        <dt class="col-sm-2">
            Cliente
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdReservaNavigation.CiCliente)
        </dd>
        <dt class="col-sm-2">
            Numero Reserva
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdReservaNavigation.Id)
        </dd>
        <dt class="col-sm-2">
            Total orden
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
</div>
<br />
<div>
    <a class="custom-btn" href="@Url.Action("Create", "OrdenDetalle", new { idOrden = Model.Id })">Agregar productos</a>
</div>


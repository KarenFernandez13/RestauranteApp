@model Restaurante.Models.Orden

@{
    ViewData["Title"] = "Detalles de la Orden";
    double totalOrden = 0;
}
@if (User.Identity!.IsAuthenticated) // sirve para bloquear ver los elementos si no estas registrado
{
<h3 class="bold-text">~ Orden </h3>
<hr />
<br />
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre del Cliente
        </dt>
        <dd class="col-sm-10">
            @Model.IdReservaNavigation.CiCliente
        </dd>
        <dt class="col-sm-2">
            Fecha
        </dt>
        <dd class="col-sm-10">
            @Model.IdReservaNavigation.Fecha.ToString("dd/MM/yyyy")
        </dd>
    </dl>
</div>
<hr />
<div>
    <h4>Detalles</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Producto
                </th>
                <th>
                    Cantidad
                </th>
                <th>
                    Precio unitario
                </th>
                <th>
                    Subtotal
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrdenDetalles)
            {
                var precio = item.CodigoProdNavigation?.Precio ?? 0;
                var subtotal = item.Cantidad * precio;
                totalOrden += subtotal;
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoProdNavigation.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CodigoProdNavigation.Precio)
                    </td>
                    <td>
                        @subtotal.ToString("C")
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-right">Total de la Orden:</th>
                <th>@totalOrden.ToString("C")</th>
            </tr>
        </tfoot>
    </table>
</div>

<div>
    <a asp-action="Index" asp-controller="Producto">Volver</a>
</div>
}
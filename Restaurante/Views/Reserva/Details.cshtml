@model Restaurante.Models.Reserva

@{
    ViewData["Title"] = "Details";
}
@if (User.Identity!.IsAuthenticated) // sirve para bloquear ver los elementos si no estas registrado
{
<style>
    body {
        font-family: 'Playfair Display', serif;
        font-style: italic;
    }

    .centered-text {
        text-align: center;
        font-weight: bold;
        color: #333;
    }

    .bold-text {
        font-weight: bold;
    }

  
</style>

<br/>
<h3 class="bold-text">~ Detalles de Reserva ~</h3>
<hr>
<br />
<div>
    <dl class="row">
        <dt class = "col-sm-2"> 
            Fecha
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>       
        <dt class = "col-sm-2">
            Hora
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Hora)
        </dd>
        <dt class = "col-sm-2">
            Ci Cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CiClienteNavigation.Ci)
        </dd>
        <dt class = "col-sm-2">
            Numero Mesa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdMesaNavigation.Numero)
        </dd>
        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
</div>
<hr />
<div>
    <a class="custom-btn" href="@Url.Action("Index", "Reserva")">Volver</a>
</div>

}
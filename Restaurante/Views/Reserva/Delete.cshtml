@model Restaurante.Models.Reserva

@{
    ViewData["Title"] = "Delete";
}

<style>
    body {
        font-family: 'Playfair Display', serif;
        font-style: italic;
    }

    .centered-text {
        text-align: center;
        font-weight: bold;
        color: #333;
    }

    .bold-text {
        font-weight: bold;
    }

    .btn-delete {
        background-color: lightslategrey;
        color: black;
        border: 1px solid #b85f33;
        padding: 10px 20px;
        text-decoration: none;
        font-family: 'Playfair Display', serif;
        font-style: italic;
        font-weight: bold;
        transition: background-color 0.3s, color 0.3s;
    }

        .btn-delete:hover {
            background-color: rgba(0, 0, 0, 0.1);
            color: #333;
            border-color: #b85f33;
        }
</style>

<br/>
<h3>~ Eliminar Reserva ~</h3>
<hr/>
<div>        
    <dl class="row">
        <dt class = "col-sm-2">
            Fecha: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">
            Hora
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hora)
        </dd>
        <dt class = "col-sm-2">
           Estado: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>      
        <dt class = "col-sm-2">
            Cliente: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CiClienteNavigation.Ci)
        </dd>
        <dt class = "col-sm-2">
            Mesa: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdMesaNavigation.Id)
        </dd>
    </dl>
    <br/>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn-delete" />
    </form>
    <br />
    <div>
        <a class="custom-btn" href="@Url.Action("Index", "Reserva")">Volver</a>
    </div>
</div>

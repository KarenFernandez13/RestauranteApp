@model Restaurante.Models.Reserva

@{
    ViewData["Title"] = "Delete";
}
<hr/>
<h3>Eliminar</h3>
<h3>Reserva</h3>
<hr/>
<div>        
    <dl class="row">
        <dt class = "col-sm-2">
            Fecha: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class="col-sm-2">
            Hora
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hora)
        </dd>
        <dt class = "col-sm-2">
           Estado: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>      
        <dt class = "col-sm-2">
            Cliente: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CiClienteNavigation.Ci)
        </dd>
        <dt class = "col-sm-2">
            Mesa: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdMesaNavigation.Id)
        </dd>
    </dl>
    <hr/>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />        
    </form>
    <hr />
    <div>
        <a class="btn btn-primary" href="@Url.Action("Index", "Reserva")">Volver</a>
    </div>
</div>
